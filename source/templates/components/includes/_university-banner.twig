{% set optionAdmissions = universityBanner.universityBannerAdmissions.value %}
{% set optionSchools = universityBanner.universityBannerSchools.value %}
{% set optionNews = universityBanner.universityBannerNews.value %}
{% set optionEvents = universityBanner.universityBannerEvents.value %}
{% set optionGift = universityBanner.universityBannerGift.value %}
{% set giftURL = universityBanner.genericUrl ?? true %}
{% set optionSearch = universityBanner.universityBannerSearch.value %}
{% set searchType = optionSearch == 'domain' ? optionSearch : true %}

{% set attributes = {
  admissions: optionAdmissions == 'show' ? true : false,
  schools: optionSchools == 'show' ? true : false,
  news: optionNews == 'show' ? true : false,
  events: optionEvents == 'show' ? true : false,
  gift: optionGift == 'show' ? giftURL : false,
  search: optionSearch != 'hide' ? searchType : false,
  padding: '20',
  size: '1180px'
} %}

<umd-utility-header {{ attr(attributes) }}></umd-utility-header>
